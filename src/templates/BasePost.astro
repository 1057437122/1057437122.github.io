---
import type { IFrontmatter } from "@/dependences";
import { BlogPost } from "@/partials/BlogPost";
import { Contact } from "@/partials/Contact";
import Base from "@/templates/Base.astro";
import { AppConfig } from "@/utils/AppConfig";

export interface Props {
  content: IFrontmatter;
}

const { content } = Astro.props as Props;
const title = `${content.title} - ${AppConfig.site_name}`;
const keywords = `${content.keywords}`;
---

<Base head={{ title, description: content.description, keywords }}>
  <BlogPost frontmatter={content}>
    <slot></slot>
  </BlogPost>

  <Contact />
</Base>
